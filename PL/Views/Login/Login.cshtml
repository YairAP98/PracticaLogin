@model PL.Models.Negocio
@{
    ViewBag.Title = "LoginUser";
    Layout = null;

}
@Styles.Render("~/Content/css")

<!-- Section: Design Block -->
<section class="text-center">
    <div class="row d-flex justify-content-center">
        <div class="col-lg-8">
            <h2 class="fw-bold mb-5">Sign up now</h2>

            <div class="d-flex align-items-center justify-content-center">
                @using (Html.BeginForm("Login", "Login", FormMethod.Post, new { enctype = "multipart/form-data", @class = "text-center" }))
                {
                    <label class="form-label" for="form3Example3">User Name</label>
                    <div class="form-outline mb-4 mx-auto">
                        @Html.TextBoxFor(model => Model.Username, new { @class = "form-control" })
                    </div>

                    <label class="form-label" for="form3Example4">Password</label>
                    <div class="form-outline mb-4 mx-auto" typeof="password">
                        @Html.TextBoxFor(model => Model.Password, new { @class = "form-control" })
                    </div>

                    <button type="submit" class="btn btn-primary btn-block mb-4">
                        Sign up
                    </button>
                }
            </div>

        </div>
    </div>
</section>
